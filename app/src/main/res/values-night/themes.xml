<resources>
    <!-- Base application theme. -->
    <style name="Theme.MiniBankingDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- This is a more fine-grained approach to styling buttons than
        using `shapeAppearanceSmallComponent` -->
        <item name="materialButtonStyle">@style/CustomButton</item>
    </style>

    <!-- Makes the Spinner popup window more distinguishable, otherwise by default, it doesn't
    look like popup -->
    <style name="ThemeOverlay.MiniBankingDemo.SpinnerPopup" parent="ThemeOverlay.AppCompat.Dark" />

    <!-- Fixes a readability issue with Toolbar overflow menu -->
    <style name="ThemeOverlay.MiniBankingDemo.OverflowMenu" parent="ThemeOverlay.MaterialComponents.Dark" />
</resources>
